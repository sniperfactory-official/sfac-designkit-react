{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "noEmit": false,
      "module": "esnext",
      "declaration": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react",
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
}